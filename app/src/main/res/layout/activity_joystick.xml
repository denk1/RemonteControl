<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.example.den.remontecontrol"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

        <com.example.den.remontecontrol.CircleView
            android:id="@+id/circleView1"
            android:layout_width="270dp"
            android:layout_height="270dp"
            custom:backgroundColor="#FFFFFF"
            custom:innerCircleColor="#FF2222"
            custom:outerCircleColor="#2222FF" />

        <com.example.den.remontecontrol.CircleView
            android:id="@+id/circleView2"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_alignParentEnd="true"
            custom:backgroundColor="#FFFFFF"
            custom:innerCircleColor="#2222FF" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="TextView" />

</LinearLayout>